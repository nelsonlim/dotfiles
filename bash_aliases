# ls aliases
alias ll='ls -lF'
alias lla='ls -lFA'
alias la="ls -A"
alias ltr='ls -ltrF'
alias ltra='ls -ltrFa'

# cd aliases
alias u='cd ..'
alias uu='cd ../..'
alias uuu='cd ../../..'
alias uuuu='cd ../../../..'

# program aliases
alias v='vim'
alias gv='vim -g'

# remove firefox locks
alias rmlocks="rm -fv ~/.mozilla/firefox/*.default/lock"
